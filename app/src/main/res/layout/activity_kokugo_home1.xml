<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kokugo_Home1">

    <!--上の青いバー-->
    <View
        android:id="@+id/view"
        android:layout_width="475dp"
        android:layout_height="100dp"
        android:background="#4169e1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--ホームボタン-->
    <Button
        android:id="@+id/home"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/baseline_home_24"
        android:contentDescription="ホームボタン"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015"/>

    <!--検索バー-->
    <SearchView
        android:layout_width="214dp"
        android:layout_height="62dp"
        android:background="@drawable/search_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <!--戻るボタン-->
    <Button
        android:id="@+id/back_button"
        android:layout_width="85dp"
        android:layout_height="52dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#4169e1"
        android:text="戻る"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.077" />

    <!--第一回-->
    <Button
        android:id="@+id/button1"
        android:layout_width="370dp"
        android:layout_height="105dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/selection_button"
        android:text=" 国語Ⅰ                    \n 第一回　----------"
        android:textSize="30sp"
        android:gravity="left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button" />

    <!--第二回-->
    <Button
        android:id="@+id/button2"
        android:layout_width="370dp"
        android:layout_height="105dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selection_button"
        android:text=" 国語Ⅰ                   \n 第二回　----------"
        android:textSize="30sp"
        android:gravity="left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <!--第三回-->
    <Button
        android:id="@+id/button3"
        android:layout_width="370dp"
        android:layout_height="105dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selection_button"
        android:text=" 国語Ⅰ                  \n 第三回　----------"
        android:textSize="30sp"
        android:gravity="left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />
    <!--授業-->
    <Button
        android:id="@+id/class_button"
        android:layout_width="136dp"
        android:layout_height="100dp"
        android:background="@drawable/blue_button"
        android:text="授業"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="1.0" />

    <!--復習-->
    <Button
        android:id="@+id/review_button"
        android:layout_width="136dp"
        android:layout_height="100dp"
        android:layout_marginStart="136dp"
        android:background="@drawable/blue_button"
        android:text="復習"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/test_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="1.0" />

    <!--テスト-->
    <Button
        android:id="@+id/test_button"
        android:layout_width="136dp"
        android:layout_height="100dp"
        android:background="@drawable/blue_button"
        android:text="テスト"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>